@model IEnumerable<TopRock.Models.Product>

@{
    ViewData["Title"] = "Product Collection";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <h1>Shop Our @ViewBag.Category</h1>

<section>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-6 col-lg-4 mb-3">
                <div class="card mb-3 text-center h-100">
                    <div class="card-body">
                        <a asp-controller="Shop" asp-action="ProductDetails" asp-route-product="@item.Name">@item.Name</a>
                        <h5>@String.Format("{0:c}", @item.Price)</h5>
                    </div>
                </div>
            </div>
        }
    </div>
</section>