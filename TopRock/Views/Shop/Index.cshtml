@model IEnumerable<TopRock.Models.Category>

@{
    ViewData["Title"] = "Shop";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>TopRock's Online Shop</h1>

<section>
    <div class="row">
        @foreach (var item in Model)
        {
            var imagePath = "/img/categories/" + @item.Name + ".jpg";            
            <div class="col-sm-6 col-lg-4 mb-3">
                <div class="card mb-3 text-center h-100">
                    <div class="card-body">
                        <a asp-controller="Shop" asp-action="Browse" asp-route-category="@item.Name">
                            <h3>@item.Name</h3>                            
                            <img class="shopPic" alt="@item.Name" src="@imagePath" />
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>