@model TopRock.Models.Product

@{
    String productName = @Model.Name;
    var imagePath = "/img/" + @productName +".jpg";

    ViewData["Title"] = @productName;
    Layout = "~/Views/Shared/_Layout.cshtml";

}

    <h1>@productName</h1>

<form asp-action="AddToCart">
    <div>
        <img class="detailPic" src="@imagePath" alt="@productName" />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt class="col-sm-2">
                Quantity
            </dt>
            <dd class="col-sm-10">
                <input name="Quantity" id="Quantity" required type="number" min="1" />
                <input name="ProductId" id="ProductId" value="@Model.ProductId" type="hidden" />
            </dd>
        </dl>
    </div>
    <div class="offset-2">
        <button class="btn btn-primary">Add to Cart</button>
        <a href="https://localhost:44304/Shop" onclick="window.history.go(-1); return false;" class="btn btn-primary"><< Last Page</a>
    </div>
</form>